<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AAA.Views.WebPage">
    <ContentPage.Content>
        <StackLayout>
            <WebView HorizontalOptions="FillAndExpand"
                     VerticalOptions="FillAndExpand"
                     Source="{Binding WebViewSourceCloud}" />
            <Entry BackgroundColor="White"
                   Text="{Binding DropboxCode}"
                   Placeholder="Rewrite code here"
                   IsVisible="{Binding IsDropboxConnection}"
                   HorizontalOptions="FillAndExpand" />
            <Button BackgroundColor="#32CD32"
                    Text="CONFIRM CODE"
                    TextColor="White"
                    Command="{Binding ConfirmDropboxCommand}"
                    IsVisible="{Binding IsDropboxConnection}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>