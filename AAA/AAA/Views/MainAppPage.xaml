<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:controls="clr-namespace:AAA.Controls"
             xmlns:viewModel="clr-namespace:AAA.ViewModels;"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AAA.Views.MainAppPage"
             Title="Home"
             x:Name="Root">

    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="user_96px.png"
                     Order="Primary" />
    </ContentPage.ToolbarItems>
        
    <ContentPage.BindingContext>
        <viewModel:MainViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding TestList2}"
                      BackgroundColor="DarkGray"
                      RowHeight="185">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <controls:ViewCellCard Command="{Binding Command1}"
                                               CardImageSource="{Binding S3}"
                                               CardSubtext="{Binding S2}"
                                               CardTitle="{Binding S1}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>