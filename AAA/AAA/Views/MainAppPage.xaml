<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:controls="clr-namespace:AAA.Controls"
             xmlns:viewModel="clr-namespace:AAA.ViewModels;"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AAA.Views.MainAppPage"
             Title="AAA">

    <ContentPage.BindingContext>
        <viewModel:MainViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding TestList}"
                      RowHeight="80">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <controls:ViewCellExtension AdditionalCommand="{Binding Command2}"
                                                    AdditionalImageSource="bottle.jpg"
                                                    MainCommand="{Binding Command1}"
                                                    MainImageSource="icon.png"
                                                    MainText="{Binding S1}"
                                                    SubimageSource="{Binding S2, Converter={StaticResource CloudTypeToImageSourceConverter}}"
                                                    Subtext="Test text" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>