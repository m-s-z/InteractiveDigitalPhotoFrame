<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:AAA.Controls;assembly=AAA"
             x:Class="AAA.Views.CloudsListPage"
             Title="Cloud providers">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding TestList4}"
                      RowHeight="80">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <controls:ViewCellExtension AdditionalCommand="{Binding Command2}"
                                                    AdditionalImageSource="minus_96px.png"
                                                    MainCommand="{Binding Command1}"
                                                    MainImageSource="{Binding SImage, Converter={StaticResource CloudTypeToImageSourceConverter}}"
                                                    MainText="{Binding S1}"
                                                    Subtext="{Binding S2}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button VerticalOptions="End" Text="ADD NEW ACCOUNT" TextColor="White"  BackgroundColor="#32CD32"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>