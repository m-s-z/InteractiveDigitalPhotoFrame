<!DOCTYPE html>
<html>
@if (Session["UserId"] == null)
{
    Response.Redirect("~/Login");
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>IDPF</title>
    <link runat="server" rel="shortcut icon" href="~/Images/Logo_web.ico" type="image/x-icon" />
    <link runat="server" rel="icon" href="~/Images/Logo_web.ico" type="image/ico" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top background-solid">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand home-icon" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Devices", "Index", "Device", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Folders", "Index", "Folder", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Clouds", "Index", "Cloud", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Account", "Index", "Account", new { area = "" }, null)</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Log Out", "LogOut", "Login", new { area = "" }, new { @class = "float-right" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="background-footer">
            <p>&copy; @DateTime.Now.Year - DPF</p>
            <p>Authors: Mikołaj Słoń &amp; Mateusz Szperna</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
