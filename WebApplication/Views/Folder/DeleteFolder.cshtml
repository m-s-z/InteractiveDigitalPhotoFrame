@model WebApplication.ViewModels.ConfirmDeleteFolderViewModel
@{ 
    ViewBag.Title = "DeleteFolder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Are you sure you want to delete this folder?</h2>
@using (Html.BeginForm("ConfirmDeleteFolder", "Folder", FormMethod.Post))
{
    <input type="hidden" name="folderId" value="@(Model.FolderId)"></input>
    <input class="btn-warning" type="submit" value="Delete Model" />

}
