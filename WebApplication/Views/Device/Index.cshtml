@model WebApplication.ViewModels.DeviceViewModel
@{
    ViewBag.Title = "Device";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/Scripts/Device/device.js")

<h2>Devices</h2>
<ul class="list-group">
    @foreach (var device in Model.Devices)
    {
        <li class="list-group-item">
            <span class="link-goto folder-name">@Html.ActionLink(@device.Name, "Index", "Folder", new { IdOfOpenDevice = device.DeviceId }, new {@class = "remove-link" })</span>
            
            <p class="btn btn-default remove-button">@Html.ActionLink("Unpair Device", "Delete", "Cloud", new { cloudId = -1 }, null)</p>
        </li>
    }
</ul>
<p class="btn btn-default center-block">@Html.ActionLink("Pair With New Device", "NewDevice", "Device", new { area = "" }, null)</p>


