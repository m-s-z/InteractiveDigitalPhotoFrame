@model WebApplication.ViewModels.DeviceViewModel
@{
    ViewBag.Title = "Device";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Scripts.Render("~/Scripts/Device/device.js")

<h2>Devices</h2>
<ul class="list-group">
    @foreach (var device in Model.Devices)
    {
        <li class="list-group-item">
            <span>@device.Name</span>
            
            <p class="btn btn-default">@Html.ActionLink("Delete", "Delete", "Cloud", new { cloudId = -1 }, null)</p>
        </li>
    }
</ul>
<p class="btn btn-default">@Html.ActionLink("New Device", "NewDevice", "Device", new { area = "" }, null)</p>


